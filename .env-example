# Basic Bot Configuration
BOT_NAME=News Bot
BOT_ADMINS=admin1hash,admin2hash
BOT_ANNOUNCE=600
BOT_ANNOUNCE_IMMEDIATE=false
BOT_PREFIX=

# Security & Signatures
BOT_SIGNATURE_VERIFICATION_ENABLED=true
BOT_REQUIRE_MESSAGE_SIGNATURES=false

# Performance & Limits
BOT_RATE_LIMIT=8
BOT_COOLDOWN=1
BOT_MAX_WARNINGS=3
BOT_WARNING_TIMEOUT=300

# Permissions & Features
BOT_PERMISSIONS_ENABLED=false
BOT_HOT_RELOAD=false
BOT_FIRST_MESSAGE_ENABLED=true
BOT_EVENT_LOGGING_ENABLED=false
BOT_MAX_LOGGED_EVENTS=1000
BOT_EVENT_MIDDLEWARE_ENABLED=false
BOT_ANNOUNCE_ENABLED=true

# Storage Configuration
BOT_STORAGE_TYPE=sqlite
BOT_STORAGE_PATH=
DATA_DIR=/app/data
BACKUP_DIR=/app/backups

# Feed Configuration
FEEDS_CONFIG=/path/to/feeds.yml
CONFIG_DIR=